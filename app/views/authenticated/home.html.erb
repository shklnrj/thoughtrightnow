<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Content</th>
            <th> by </th>
          </tr>
        </thead>
        <tbody>
          <% @feed.each do |feed_item| %>
            <% post = Post.find(feed_item.post_id) %>
            <% user = User.find(post.user_id) %>
            <tr>
              <td><%= post.content %></td>
              <td>
                <%= user.email %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
